{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "sourceMap": true,

    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
